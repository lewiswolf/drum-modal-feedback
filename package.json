{
	"name": "drum-modal-feedback",
	"version": "1.1.0",
	"author": "Lewis Wolstanholme & Jordie Shier",
	"description": "Javascript API for dum-modal-feedback",
	"main": "code/dist/index.js",
	"source": "code/src/index.ts",
	"devDependencies": {
		"@eslint/js": "^9.16.0",
		"@types/max-api": "^2.0.3",
		"@types/node": "^22.10.1",
		"eslint": "^9.16.0",
		"prettier": "^3.4.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.17.0"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"format": "prettier --write .",
		"test": "tsc && eslint ."
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"endOfLine": "lf",
		"htmlWhitespaceSensitivity": "strict",
		"jsxSingleQuote": true,
		"overrides": [
			{
				"files": [
					"*.maxpat",
					"*.maxproj"
				],
				"options": {
					"parser": "json"
				}
			}
		],
		"printWidth": 110,
		"quoteProps": "as-needed",
		"semi": false,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	}
}
